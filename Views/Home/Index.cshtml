@model List<IdealDiscuss.Dtos.QuestionDto.ViewQuestionDto>

@{
    ViewData["Title"] = "Home Page";
    int count = 1;
}

@await Html.PartialAsync("_ListAlert", Model)

@if (Model is not null && Model.Count >= 1)
{
    <table class="table">
        <thead>
            <tr>
                <th scope="col">S/N</th>
                <th scope="col">Question</th>
                <th scope="col">Action</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@count</th>
                    <td>@item.QuestionText</td>
                    <td>
                        <div class="btn-group">
                            <a asp-controller="Comment" asp-action="Create" asp-route-id="@item.Id" class="btn btn-success">Add Comment</a>
                        </div>
                    </td>
                </tr>
                count++;
            }
        </tbody>
    </table>
}

