@model IdealDiscuss.Dtos.QuestionDto.CreateQuestionDto

@{
    ViewData["Title"] = "Create A Question";
    var status = ViewBag.Status == false ? "alert-danger" : "alert-success";
}

@if (ViewBag.Message != null)
{
    <div class="alert @status alert-dismissible" question="alert">
        @ViewBag.Message
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="d-flex justify-content-center">
    <form asp-action="Create">
        <div class="col-md-12 mb-2">
          		<div class="col-md-6" style="margin-top: 20px; font-size: larger; font-weight: bold; color: darkcyan">
                            <label class="control-label">Categories</label>
                            <select asp-for="CategoryIds"  class="form-control" asp-items="ViewBag.Categories" multiple required>
                                <option value="">--Select Categories--</option>
                            </select>
                </div>
        </div>
        <div class="col-md-12 mb-2">
            <label for="QuestionText" class="form-label">Question:</label>
            <input type="text" class="form-control" placeholder="Enter your question" name="QuestionText">
        </div>

        <div class="col-md-12">
            <button type="submit" class="btn btn-primary">Create Question</button>
        </div>
    </form>
</div>
