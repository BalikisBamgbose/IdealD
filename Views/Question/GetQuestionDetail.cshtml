@model IdealDiscuss.Models.Question.QuestionViewModel

@{
    ViewData["Title"] = "Question Detail";
}

<div class="body">

    @await Html.PartialAsync("_Alert", Model)

    @if (Model is not null)
    {
        <div class="card">

            <img src="@Model.ImageUrl" class="card-img-top" />

            <div class="card-header">

                <h5>
                    @Model.QuestionText

                    @if (Model.Comments.Count == 0 && User.IsInRole("AppUser"))
                    {
                        <a asp-controller="Question" asp-action="Update" asp-route-id="@Model.Id" class="text-primary">
                            <i class="fas fa-edit"></i>
                        </a>

                        <a asp-controller="Question" asp-action="DeleteQuestion" asp-route-id="@Model.Id" class="text-danger">
                            <i class="fas fa-trash"></i>
                        </a>
                    }
                </h5>

            </div>

            <div class="card-body">

                @if (Model.Comments.Count != 0)
                {
                    <div class="card mb-3">
                        <div class="card-header bg-light">
                            Comments:
                        </div>
                        <ul class="list-group list-group-flush">
                            @foreach (var comment in Model.Comments)
                            {
                                <li class="list-group-item">
                                    @comment.CommentText
                                    <span class="badge bg-dark">@comment.UserName</span>
                                    <a asp-controller="Comment" asp-action="GetCommentDetail" asp-route-id="@comment.Id">View Report</a>
                                </li>
                            }
                        </ul>
                    </div>
                }

                <div>
                    <a asp-controller="Question" asp-action="Index" class="btn btn-secondary">
                        Back to list
                    </a>
                </div>

            </div>
        </div>
    }
</div>






