@model IdealDiscuss.Dtos.RoleDto.ViewRoleDto

<div class="body">
    <dl class="row">
        <dt class="col-sm-4">
            Role Name:
        </dt>

        <dd class="col-sm-8">
            @Model.RoleName
        </dd>

        <dt class="col-sm-4">
            Description:
        </dt>

        <dd class="col-sm-8">
            @Model.Description
        </dd>
    </dl>
    <br />
    <div class="btn-group">
        <a asp-controller="Role" asp-action="Update" asp-route-id="@Model.Id" class="btn btn-success">Update</a>
        &nbsp;
        <form asp-action="DeleteRole" asp-route-id="@Model.Id">
            <button type="submit" class="btn btn-danger">Delete</button>
        </form>
        &nbsp;
        <a asp-controller="Role" asp-action="Index" class="btn btn-secondary">Back to list</a>
    </div>
</div>






